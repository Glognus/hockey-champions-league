{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "SWA: Run app",
            "request": "launch",
            "type": "pwa-chrome",
            "url": "http://localhost:4280",
            "preLaunchTask": "swa: start app",
            "webRoot": "${workspaceFolder}/hockey-webapp",
            "timeout": 30000
        },
        {
            "name": "Attach to .NET Functions",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:azureFunctions.pickProcess}"
        }
    ]
}